## Configuration
alias zconf='v ~/.dotfiles/home/modules/zsh/.zshrc'
alias sconf='v ~/.dotfiles/home/modules/zsh/.shell_config'
alias aconf='v ~/.dotfiles/home/modules/zsh/.shell_aliases'
alias hconf='v ~/.dotfiles/home/modules/hypr/hyprland.conf'
alias wconf='v ~/.dotfiles/home/modules/waybar/config'
alias wstyle='v ~/.dotfiles/home/modules/waybar/style.css'
alias homeconf='v ~/.dotfiles/home/home.nix'
alias sysconf='v ~/.dotfiles/system/configuration.nix'
alias zsrc='source ~/.config/zsh/.zshrc'

## Basic actions
alias cl='clear'
alias ex='exit'

# NixOS
alias uhome='~/.dotfiles/uhome.sh'
alias usys='~/.dotfiles/usys.sh'

## Flatpak
alias fpup='flatpak update'
alias fpse='flatpak search'
alias fpin='flatpak install'
alias fpun='flatpak uninstall --delete-data'
alias fpunun='flatpak uninstall --unused'
alias fpli='flatpak list'

alias qpwgraph='hyprctl dispatch exec "org.rncbc.qpwgraph -m"'

## Apps
alias v='nvim'
alias pdf='sioyek'
alias lg='lazygit'
alias man='batman'
alias btm='btm -bT --process_command'

## Mullvad
alias mullcheck='firefox --new-window https://mullvad.net/en/check/'

## LS & CD
alias ls='lsd -ha --header --group-dirs=first --date '+%F %R''
alias lsl='lsd -lha --header --group-dirs=first --date '+%F %R''
alias zz='cd ..'
alias zzz='cd ../..'
alias zzzz='cd ../../..'
alias df='z ~/.dotfiles/'
alias cf='z ~/.config/'

## GIT alias
alias gs='git status'
alias ga='git add'
alias gaa='git add --all'
alias gau='git add -u'
alias gcm='git commit -m "no message commit"'
alias gc='git commit -m $1'
alias gpsh='git push'
alias gpll='git pull'
alias gcln='git clone'

